{
  "name": "abluelemon",
  "version": "1.0.2",
  "description": "A blue lemon productions web app",
  "main": "./src/index.js",
  "repository": "https://github.com/txiverke/abluelemon.git",
  "author": "Xavier Vila <xavi.vila.albiol@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn dev:build",
    "dev:build": "yarn webpack-dev-server --env.mode development --hot",
    "prod:build": "rimraf dist && yarn webpack --env.mode production",
    "prod:start": "cross-env NODE_ENV=production pm2 start server.js && pm2 logs",
    "prod:stop": "pm2 delete server",
    "prod:analyze": "yarn prod:build --env.presets analyze",
    "prod:compress": "yarn prod:build --env.presets compress",
    "lint": "eslint src --ext .js,.jsx",
    "test": "jest --coverage"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cross-env": "^5.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "express": "^4.16.4",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "path": "^0.12.7",
    "react": "^16.7.0-alpha",
    "react-dom": "^16.7.0-alpha",
    "uglifyjs-webpack-plugin": "^2.0.1"
  },
  "devDependencies": {
    "babel-loader": "^7.1.5",
    "babel-plugin-dynamic-import-webpack": "^1.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "compression-webpack-plugin": "^2.0.0",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1 || ^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-compat": "^2.6.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.4",
    "nodemon": "^1.18.6",
    "pm2": "^3.2.2",
    "postcss-loader": "^2.1.5",
    "prop-types": "^15.6.2",
    "react-helmet": "^5.2.0",
    "react-icons": "^3.2.2",
    "react-router-dom": "^4.3.1",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "styled-components": "^4.0.3",
    "terser-webpack-plugin": "^1.1.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.8.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2",
    "webpack-pwa-manifest": "^3.7.1",
    "workbox-webpack-plugin": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test"
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTest.js",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|less|sass|scss)$": "<rootDir>/src/__mocks__/styleMock.js"
    }
  }
}
